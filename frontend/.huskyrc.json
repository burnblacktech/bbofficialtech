{
  "hooks": {
    "pre-commit": [
      "lint-staged",
      "format",
      "test:staged"
    ],
    "pre-push": [
      "test",
      "build"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "format": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}